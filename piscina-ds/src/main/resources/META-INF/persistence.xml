<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="aclgomes-rnavalho-project-ds">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<jta-data-source>java:/projManager</jta-data-source>
		<class>pt.uc.dei.ds.entities.Allocation</class>
		<class>pt.uc.dei.ds.entities.Attachment</class>
		<class>pt.uc.dei.ds.entities.Business</class>
		<class>pt.uc.dei.ds.entities.Client</class>
		<class>pt.uc.dei.ds.entities.Project</class>
		<class>pt.uc.dei.ds.entities.Projmanager</class>
		<class>pt.uc.dei.ds.entities.Role</class>
		<class>pt.uc.dei.ds.entities.Skill</class>
		<class>pt.uc.dei.ds.entities.Stage</class>
		<class>pt.uc.dei.ds.entities.Task</class>
		<class>pt.uc.dei.ds.entities.Taskstage</class>
		<class>pt.uc.dei.ds.entities.Tasktype</class>
		<class>pt.uc.dei.ds.entities.Taskwork</class>
		<class>pt.uc.dei.ds.entities.Tipology</class>
		<class>pt.uc.dei.ds.entities.User</class>
		<class>pt.uc.dei.ds.entities.Holiday</class>

		<properties>
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
